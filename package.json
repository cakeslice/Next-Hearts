{
	"name": "nextjs-template",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"npm": ">=10.0.0",
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "next dev -p 4000",
		"translations:extract": "lingui extract --clean",
		"analyze-build": "cross-env-shell ANALYZE=true next build && npm run build:post",
		"build": "next build",
		"build-standalone": "cross-env-shell STANDALONE=true next build && npm run build:post",
		"build-export": "cross-env-shell EXPORT=true next build && next-export-optimize-images && npm run build:post",
		"build:post": "next-sitemap",
		"start": "next start -p 4000",
		"start-standalone": "cross-env cpy './public/**' './.next/standalone/public' && cross-env cpy './.next/static/**' './.next/standalone/.next/static' && node .next/standalone/server.js",
		"start-export": "cd out && npx serve",
		"lint": "next lint",
		"deploy-docker": "env-cmd npm run deploy-docker-script",
		"deploy-docker-script": "cross-env-shell docker image build -t $DOCKER_IMAGE . && cross-env-shell docker push $DOCKER_IMAGE",
		"test": "jest",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/modifiers": "^9.0.0",
		"@formkit/auto-animate": "^0.8.2",
		"@heroicons/react": "^2.2.0",
		"@heroui/react": "2.6.14",
		"@hookform/resolvers": "^4.0.0",
		"@lingui/core": "^5.2.0",
		"@lingui/react": "^5.2.0",
		"@next/third-parties": "^15.1.7",
		"@uidotdev/usehooks": "^2.4.1",
		"clsx": "^2.1.1",
		"framer-motion": "^12.4.2",
		"isbot": "^5.1.22",
		"lodash": "^4.17.21",
		"next": "^15.1.7",
		"next-themes": "^0.4.4",
		"node-cache": "^5.1.2",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-fast-marquee": "^1.6.5",
		"react-hook-form": "^7.54.2",
		"react-hydration-provider": "^2.1.0",
		"react-intersection-observer": "^9.15.1",
		"react-responsive": "^10.0.0",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"swr": "^2.3.2",
		"tailwind-merge": "^3.0.1",
		"unique-names-generator": "^4.7.1",
		"uuid": "^11.0.5",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.4.0",
		"@lingui/cli": "^5.2.0",
		"@lingui/loader": "^5.2.0",
		"@lingui/macro": "^5.2.0",
		"@lingui/swc-plugin": "^5.1.0",
		"@next/bundle-analyzer": "^15.1.7",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^29.5.14",
		"@types/lodash": "^4.17.15",
		"@types/node": "22.13.1",
		"@types/react": "19.0.8",
		"@types/react-dom": "19.0.3",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.5.14",
		"@welldone-software/why-did-you-render": "^10.0.1",
		"autoprefixer": "^10.4.20",
		"cpy-cli": "^5.0.0",
		"cross-env": "^7.0.3",
		"env-cmd": "^10.1.0",
		"eslint": "^9.20.1",
		"eslint-config-next": "^15.1.7",
		"eslint-plugin-no-inline-styles": "^1.0.5",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"next-compose-plugins": "^2.2.1",
		"next-export-optimize-images": "^4.6.1",
		"next-router-mock": "^0.9.13",
		"next-sitemap": "^4.2.3",
		"postcss": "^8.5.2",
		"postcss-import": "^16.1.0",
		"prettier": "^3.5.0",
		"sharp": "^0.33.5",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"ts-jest": "^29.2.5",
		"typescript": "^5.7.3"
	}
}
